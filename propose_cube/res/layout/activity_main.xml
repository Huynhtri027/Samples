<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Propose"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/touch_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >

        <LinearLayout
            android:id="@+id/lyt4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_alpha3"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView07"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mouse" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/ImageView08"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mouse" />

                <ImageView
                    android:id="@+id/ImageView09"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mouse" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_alpha4"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/frog" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/frog" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/frog" />

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/frog" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_alpha5"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="95dp"
                android:adjustViewBounds="true"
                android:src="@drawable/pig1" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="70dp"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/pig1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_alpha2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lion" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>

